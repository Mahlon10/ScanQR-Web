            View Demo
          </button>

        <Link href="/purchase">
          <button className="bg-transparent text-white font-regular px-2 py-2 ml-45 rounded-md border border-white transition duration-300 ease-in-out hover:bg-white hover:text-blue-600 hover:scale-105 cursor-pointer">
            Proceed to Purchase
          </button>
        </Link>

        <button
            onClick={openModal}
            className="fixed bottom-10 right-10 mr-48 bg-blue-600 text-white font-semibold px-5 py-2 rounded-md shadow-lg hover:bg-blue-700 transition duration-300 cursor-pointer"
          >
            More Options
          </button>
        <div className="absolute bottom-10 left-1/2 transform -translate-x-1/2 text-center text-white">
          <div className="text-xl font-bold">Dennis Acquah</div>
          <div className="text-base font-normal">Acquah Properties</div>
        </div>
      </div>

      <Modal isOpen={isOpen} onClose={closeModal} />
      <Cardscan isscanOpen={isscanOpen} onClose={closescan} />
