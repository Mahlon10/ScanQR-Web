'use client';

import React, { useState } from 'react';
import Link from 'next/link';
import Modal from '../components/Modal';
import Cardscan from '../components/Cardscan';
import ThemeToggle from '../components/Toggle';

export default function HeroBanner() {
  const [isOpen, setModalOpen] = useState(false);
  const [isscanOpen, setscanOpen] = useState(false);

  const openModal = () => setModalOpen(true);
  const closeModal = () => setModalOpen(false);
  const openscan = () => setscanOpen(true);
  const closescan = () => setscanOpen(false);

  return (
    <div
      className="w-full h-screen flex justify-center items-center bg-cover bg-center"
      style={{ backgroundImage: 'url("https://i.postimg.cc/fLsd39mN/background-professional.jpg")' }}
    >
      <div className="absolute left-10 top-1/4 max-w-xl text-white italic text-4xl leading-snug">
        Get a <span style={{ color: '#d4e0e2' }}>Profile Card</span><br />
        linked with <br />
        a <span style={{ color: '#d4e0e2' }}>One-Page Profile Site</span>
      </div>
      <img
          src="https://i.postimg.cc/hPY7LwTM/cardscreen.png"
          alt="Decorative Illustration"
          className="absolute bottom-20 left-6 w-40 sm:w-40 md:w-88"
      />
      <div className="absolute bottom-27 right-35 scale-60 sm:scale-100">
        <ThemeToggle />
      </div>
      <div className="flex flex-col items-start gap-6 mt-10 ml-45">
          <button
              onClick={openscan}
              className="bg-white text-blue-600 font-semibold px-3 py-1 ml-51 rounded-md transition duration-300 ease-in-out hover:bg-blue-100 hover:scale-105 cursor-pointer"
